{
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/.hg/store/**": true,
        "**/.build/**": true,
        "**/.cache/**": true,
        "**/.dist/**": true,
        "**/.node_modules/**": true,
        "**/.nuxt/**": true,
        "**/.tmp/**": true,
        ".flatpak/**": true,
        "_build/**": true
    },
    "mesonbuild.configureOnOpen": false,
    "mesonbuild.buildFolder": "_build",
    "mesonbuild.mesonPath": "${workspaceFolder}/.flatpak/meson.sh"
}